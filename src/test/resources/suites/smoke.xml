<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Sauce Labs smoke suite" verbose="2">
    <groups>
        <run>
            <include name="smoke"/>
        </run>
    </groups>

    <listeners>
        <listener class-name="utilities.listeners.SuiteListeners"/>
        <listener class-name="utilities.listeners.TestListeners"/>
    </listeners>

    <test name="credentials">
        <packages>
            <package name="credentials"/>
        </packages>
    </test>

    <test name="draw">
        <packages>
            <package name="draw"/>
        </packages>
    </test>

    <test name="shopping">
        <packages>
            <package name="shopping"/>
        </packages>
    </test>

    <test name="webview">
        <packages>
            <package name="webview"/>
        </packages>
    </test>
</suite>